10.
def is_palindrome(word):
    if word == word[::-1]:
        print("True")
    else:
        print("False")

11.
def generate_fibonacci(n):
    a, b = 0, 1
    sequence = []
    for _ in range(n):
        sequence.append(a)
        a, b = b, a + b
    print(sequence)

12.
def sort_numbers(numbers):
    return sorted(numbers)

8.
def is_prime(number):
    if number % 9 == 0:
        print("False")
    if number % 8 == 0:
        print("False")
    if number % 7 == 0:
        print("False")
    if number % 6 == 0:
        print("False")
    if number % 5 == 0:
        print("False")
    if number % 4 == 0:
        print("False")
    if number % 3 == 0:
        print("False")
    if number % 2 == 0:
        print("False")
    else:
        print("True")


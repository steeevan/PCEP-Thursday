2.
def square(number):
    number = number * number
    print(number)

3.
def calculate_area(length, width):
    print(length * 2 + width * 2)

4.
def convert_temperature(value, to_unit="C"):
    if to_unit=="C":
        value = value * 1.8 + 32
    if to_unit=="F":
        value = value - 32
        value = value / 1.8
    print(float(value))

5.
def factorial_recursive(n):
    if n == 1:
        return 1
    else:
        return n * factorial_recursive(n - 1)

6.
def find_max(a,b,c):
    if a > b and a > c:
        print(a)
    elif b > c and b > a:
        print(b)
    else:
        print(c)

